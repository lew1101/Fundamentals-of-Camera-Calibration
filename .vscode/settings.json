{
    "editor.wordWrap": "on",
    "latex-workshop.latex.outDir": "%WORKSPACE_FOLDER%/build",
    "latex-workshop.intellisense.citation.backend": "biblatex",
    "latex-workshop.latex.recipe.default": "latexmk",
    "latex-workshop.latex.tools": [
        {
            "name": "latexmk",
            "command": "latexmk",
            "args": [
                "-shell-escape",
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "-pdf",
                "-outdir=%OUTDIR%",
                "%DOC%"
            ],
            "env": {}
        }
    ],
}
